@model ModelLayer.User
@{
    ViewData["Title"] = "SingUp";
    Layout = "~/Views/Shared/_Layoutlgn.cshtml";
}



<div class="container">
    <div class="row">
        <div class="col-6 offset-3 border border-primary rounded pl-5 pr-5 pb-5">
            <div class="text-center">
                <h1 class="text-info">User Registration Form</h1>
            </div>
            <form method="post" asp-action="SingUp">
                <div class="form-group">
                    <label>Kullanıcı Adı Girin:</label>
                    <input type="text" asp-for="UserName" placeholder="Enter username" class="form-control" autocomplete="off" />

                </div>
                <div class="form-group">
                    <label>Şifre Giriniz: </label>
                    <input type="text" asp-for="UserPassword" placeholder="Enter Password" class="form-control" autocomplete="off" />
                </div>
                <div class="form-group">
                    <input type="submit" class="mt-2 btn btn-success btn-lg mb-1 float-right" value="Registration" />
                </div>
            </form>
        </div>
    </div>
</div>

